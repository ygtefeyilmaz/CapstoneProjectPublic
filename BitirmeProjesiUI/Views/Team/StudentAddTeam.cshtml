            <hr class="col-12">


            <div class="col-4">
                <label for="studentID1" class="form-label">Student 1</label>
                <div class="input-group">
                    @Html.DropDownListFor(x => x.studentID1, (List<SelectListItem>)ViewBag.GetStudentName_Values_V, "---Choose Student---", new { @class = "form-control" })
